{
  "name": "hawkerhub",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo 'Run npm run dev in specific workspaces'",
    "build": "echo 'Run npm run build in specific workspaces'",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "api:dev": "npm run dev --workspace=api",
    "mobile:dev": "npm run dev --workspace=mobile",
    "web:dev": "npm run dev --workspace=web-admin"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}